<?xml version="1.0" encoding="UTF-8" ?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris"
    tools:context=".PrimerProduct">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/gris"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        app:navigationIcon="@drawable/menu"

        />
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/app_bar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="350dp"
        android:layout_marginTop="10dp"
        app:navigationIcon="@drawable/search"/>
    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="80dp"
        android:layout_marginHorizontal="110dp"
        android:background="@drawable/nvidia"
        />
    <ImageButton
        android:layout_width="92dp"
        android:layout_height="90dp"
        android:layout_marginTop="80dp"
        android:layout_marginHorizontal="210dp"
        android:background="@drawable/ryzen"
        />
    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="80dp"
        android:layout_marginHorizontal="12dp"
        android:background="@drawable/amd"
        />
    <ImageButton
        android:layout_width="92dp"
        android:layout_height="90dp"
        android:layout_marginTop="80dp"
        android:layout_marginHorizontal="310dp"
        android:background="@drawable/intel"
        />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="240dp"
        android:background="@color/gris"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_behavior="Product"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/recycler_view"
            android:layout_height="match_parent"/>

    </androidx.core.widget.NestedScrollView>



</FrameLayout>
